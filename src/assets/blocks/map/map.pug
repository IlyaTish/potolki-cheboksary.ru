    form.map__phone.form
      <!-- Hidden Required Fields -->
      input(type='hidden' name='project_name' value='potolki-cheboksary.ru')
      input(type='hidden' name='admin_email' value='dukaty1013@yandex.ru')
      input(type='hidden' name='form_subject' value='Заявка с формы на карте')
      <!-- END Hidden Required Fields -->
      span.map__phone__title Остались вопросы?
      .map__phone__cont
        .map__phone__input-cont
          .phone
            i.fas.fa-phone
          input.map__phone__input.phone-input(type='text' name='Телефон' placeholder='+7 (___) ___-__-__' required)
