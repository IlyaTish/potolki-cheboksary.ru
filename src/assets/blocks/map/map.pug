.map
  h3.map__title Ждем вас в нашем офисе на Чебоксарском заливе

  a.map__link(href='https://yandex.ru/maps/?um=constructor%3A368b01d953e86118ce5b503b90a3cc380452c338251d186fbd87ffeede0eac7d&source=constructorLink' target='_blank')
    img.map__img.lozad(data-src='assets/images/map.jpg')
  .map__cont
    .map__address
      .map__address__info
        span.map__address__title Тц "Дом Мод"<br>
        span.map__address__p ул. К. Воробьевых, 20<br>офис 512, 5 этаж
